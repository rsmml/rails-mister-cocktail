<div class="new-cocktail-form doses-show-info">
  <%= simple_form_for @cocktail do |f| %>
    <div class="simple-form-cocktail">
      <div class="name-photo">
        <%= f.input :name, class: 'name-input' %>
        <%= f.input :photo, as: :file %>
      </div>
      <div class="btn-saufen">
        <%= f.submit "Saufen", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
