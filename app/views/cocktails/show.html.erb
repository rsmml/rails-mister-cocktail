<div class="container-show-cocktail">
  <%= cl_image_tag @cocktail.photo.key, height: 500, wigth:500, crop: :fill %>
  <div class="show-cocktail-information">
    <h2><%= @cocktail.name %></h2>
    <%= link_to "Add Doses", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
    <div class="doses-show-info">
      <div class="doses-show-grid">
        <div class="title-show-grid">
          <h5>Ingredients</h5>
          <h5 style="margin-right: 150px">Doses</h5>
        </div>
        <% @cocktail.doses.each do |dose| %>
        <div class="dose-card-show">
          <p class="dose-name"><%= dose.ingredient.name %></p>
          <p class="dose-name"><%= dose.description %></p>
          <p class="dose-delete"><%= link_to '<i class="fa fa-trash"></i>'.html_safe, dose_path(dose), method: :delete %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
