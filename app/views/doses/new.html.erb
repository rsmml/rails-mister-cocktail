<div class="new-cocktail-form doses-show-info">
  <%= simple_form_for [ @cocktail, @dose ] do |f| %>
    <div class="simple-form-cocktail">
      <div class="name-photo">
        <%= f.input :description %>
        <%= f.association :ingredient %>
      </div>
      <div class="btn-saufen">
        <%= f.submit "Add ingredient", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
